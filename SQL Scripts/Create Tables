
CREATE DATABASE BLOG;
USE BLOG;

CREATE TABLE BLOG_USER(
    ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    FIRSTNAME VARCHAR(100) NOT NULL,
    LASTNAME VARCHAR(100) NOT NULL,
    USERNAME VARCHAR(250) NOT NULL,
    PASSWORD_HASH TEXT,
    DATE_REGISTERD DATETIME
);

CREATE TABLE POST(
    ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    POST_CONTENT TEXT,
    DATE_CREATED DATETIME,
    USER_ID INT,
    CONSTRAINT FK_POSTID_USER FOREIGN KEY (USER_ID) REFERENCES BLOG_USER(ID)
);

CREATE TABLE FEEDBACK(
    ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    POST_ID INT,
    CONSTRAINT FK_FEEDBACKID_POST FOREIGN KEY (POST_ID) REFERENCES POST(ID)
);